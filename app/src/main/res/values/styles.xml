<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bt_login</item>
        <item name="colorPrimaryDark">@color/bt_login</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#1e1e1e</item>
    </style>

    <style name="add_new_style">
        <item name="android:windowEnterAnimation">@anim/add_new_in</item>
        <item name="android:windowExitAnimation">@anim/add_new_out</item>
    </style>

    <!-- 底部fragment的Title -->
    <style name="BottomStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#1e1e1e</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_select</item>
        <item name="android:textColor">#1e1e1e</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#efeff4</item>
    </style>

    <style name="contextMenuAnim">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>

    <!--头部分-->
    <style name="StyleHead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--文本模版2  all_news-->
    <style name="StyleText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">#838080</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#fff</item>
    </style>

    <!--文本模版-->
    <style name="StyleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#fff</item>
    </style>
</resources>

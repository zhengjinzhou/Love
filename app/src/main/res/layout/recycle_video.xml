<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/griditems_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:padding="@dimen/space_16"
        android:text="8th June 2017"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17"
        android:visibility="gone" />

    <include layout="@layout/view_info" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:text="介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_200"
        android:padding="@dimen/space_16">

        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <include layout="@layout/view_menu" />

</LinearLayout>
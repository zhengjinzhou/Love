        </activity>
        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.AboutActivity" />
        <activity android:name=".ui.activity.DetailActivity" />
        <activity android:name=".ui.activity.PictureActivity" />
        <activity android:name=".ui.activity.SafeActivity" />
        <activity android:name=".ui.activity.GuildActivity" />
        <activity android:name=".ui.activity.PrivacyActivity" />
        <activity android:name=".ui.activity.RegisterActivity" />
        <activity android:name=".ui.activity.EditActivity" />
        <activity android:name=".ui.activity.HerActivity" />
